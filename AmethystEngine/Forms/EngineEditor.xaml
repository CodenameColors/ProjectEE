								</StackPanel>
							</HierarchicalDataTemplate>
							<DataTemplate DataType="{x:Type BixRen:Sprite}">
								<StackPanel Orientation="Horizontal">
									<Image Margin="0,0,5,0" Source="{Binding ImgPathLocation}" Width="50" Height="50"  />
									<TextBlock Text="{Binding Name}" Foreground="White" />
								</StackPanel>
							</DataTemplate>
						</TreeView.Resources>

