			<ControlTemplate x:Key="LevelEditorTileMap_Template">
				<TabControl x:Name="LevelEditorLibary_TabControl" Background="#FF2B2B2B" SelectionChanged="LevelEditorLibary_TabControl_SelectionChanged">

					<TabItem Header="Tile Map" Background="#FF383838" Foreground="Black" BorderBrush="#FF4D4D4D">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="30"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<!--This is for the deciding width/height of the tiles.-->
							<Grid x:Name="TileSetProperties_Grid" Grid.Row="1" >
								<Grid.RowDefinitions>
									<RowDefinition Height="30"/>
									<RowDefinition Height="30"/>
									<RowDefinition Height="30"/>
									<RowDefinition Height="30"/>
								</Grid.RowDefinitions>

								<Label Grid.Row="0" x:Name="TileMapName_LBL" Content="Name: " Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" />
								<TextBox x:Name="TileMapName_TB" Text=""  Width="102" Height="25" Foreground="White" Margin="48,3,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" HorizontalContentAlignment="Right" IsEnabled="False"/>

								<Label Grid.Row="1" x:Name="TileWidth_LBL" Content="Tile Cell Width: " Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" />
								<TextBox Grid.Row="1" x:Name="TileWidth_TB" Text="0"  Width="50" Height="25" Foreground="White" Margin="100,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" HorizontalContentAlignment="Right"/>

								<Label Grid.Row="2" x:Name="TileHeight_LBL" Content="Tile Cell Height: " Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" />
								<TextBox Grid.Row="2" x:Name="TileHeight_TB" Text="0"  Width="50" Height="25" Foreground="White" Margin="100,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" HorizontalContentAlignment="Right"/>

								<Button x:Name="CreateTileMap_BTN" Grid.Row="3" Width="Auto" Height="Auto" Content="Create Tile Map" Margin="48,8,10,0" Background="#FF383838" Foreground="White" Click="CreateTileMap_BTN_Click"/>

							</Grid>

							<Label x:Name="TileSet_LBL" Grid.Row="0" Content="TileSet:" VerticalContentAlignment="Center" Foreground="White" Visibility="Hidden"/>
							<ComboBox Grid.Row="0" x:Name="TileSetSelector_CB" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,5,5,5" SelectionChanged="TileSetSelector_CB_SelectionChanged" Visibility="Hidden" />
							<ScrollViewer Grid.Row="1" x:Name="LevelEditorTIleMap_SV" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="7,5,5,7" IsEnabled="True" Background="Black" Visibility="Hidden" ScrollChanged="LevelEditorTIleMap_SV_ScrollChanged">
								<Canvas x:Name="TileMap_Canvas" IsHitTestVisible="True" MouseWheel="LevelEditor_Canvas_MouseWheel" Width="512" Height="512" MouseLeftButtonDown="TileMap_Canvas_MouseLeftButtonDown" 
										MouseMove="TileMap_Canvas_MouseMove" HorizontalAlignment="Left" VerticalAlignment="Top" >
									<Canvas.Background>
										<VisualBrush x:Name="LevelEditorTileMapCanvas_VB" Stretch="None" TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute" >
											<VisualBrush.Visual>
												<Rectangle x:Name="TileMapGrid_Rect" Width="32" Height="32" Fill="Transparent" Stroke="White" StrokeThickness=".2" Visibility="Visible" />
											</VisualBrush.Visual>
										</VisualBrush>
									</Canvas.Background>
								</Canvas>
							</ScrollViewer>
						</Grid>
					</TabItem>
					<TabItem Header="Sprite Lib" Background="#FF383838" Foreground="Black" BorderBrush="#FF4D4D4D">
						<ListBox x:Name="SpriteLibary_LB" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch"
               Background="#FF2B2B2B" BorderBrush="Transparent" BorderThickness="0" ItemTemplate="{DynamicResource BigEdit}" ScrollViewer.VerticalScrollBarVisibility="Hidden">
							<ListBox.ItemsPanel>
