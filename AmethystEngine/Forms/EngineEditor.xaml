					<TreeView x:Name="DialogueEditor_CE_TV" Grid.Row="1" Background="#FF383838">
						<TreeView.Resources>
							<HierarchicalDataTemplate DataType="{x:Type BixChar:Character}" ItemsSource="{Binding DialogueSprites}">
